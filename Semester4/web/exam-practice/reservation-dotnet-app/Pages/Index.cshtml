@page
@model ReservationApp.Pages.IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Plan Your Trip</h1>
    <p>Enter your details to begin.</p>
</div>

<div class="row justify-content-center">
    <div class="col-md-4">
        <form method="post">
            <div class="form-group mb-2">
                <label asp-for="PersonName">Your Name</label>
                <input asp-for="PersonName" class="form-control" />
            </div>
            <div class="form-group mb-2">
                <label asp-for="SelectedDate">Date</label>
                <input asp-for="SelectedDate" type="date" class="form-control" />
            </div>
            <div class="form-group mb-2">
                <label asp-for="DestinationCity">Destination City</label>
                <input asp-for="DestinationCity" class="form-control" />
            </div>
            <button type="submit" class="btn btn-primary w-100 mt-2">Begin Reservation</button>
        </form>
    </div>
</div>